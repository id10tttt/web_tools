<templates t-name="DynamicSelectColumns">
    <t t-extend="ListView.buttons">
        <t t-jquery="t[t-if='widget.is_action_enabled(\'create\')']" t-operation="before">
            <div class="btn-group hidden-xs o_dropdown">
                <button id="select_columns" class="oe_select_columns btn btn-light dropdown-toggle fa fa-cog"
                        data-toggle="dropdown" aria-expanded="false">
                    <span/>
                    <span class="caret"/>
                </button>
                <ul id="show-menu" class="dropdown-menu o_group_by_menu oe_dropdown_menu" role="menu">
                </ul>
            </div>
        </t>
    </t>

    <t t-name="ColumnSelectionDropDown">
        <div style="position: fixed;background-color: #ffffff;width: 100%;z-index: 1;padding: 0 10px;">
            <input type="text" placeholder="搜索筛选项" class="search_option_value"/>
            <div style="display:flex;padding: 2px 0;">
                <button id="apply" class="btn btn-primary search_filedsInfo" type="button"
                        style="display: block;margin-right:4px;">
                    Search
                </button>
                <button id="apply" class="btn btn-primary o_add_group o_select_group oe_dropdown_btn" type="button"
                        style="display: block;">
                    Apply
                </button>
            </div>
        </div>
        <li class="divider"/>
        <ul id="draggableId" style="padding-left:0px;width: 150px;margin-top:65px;max-height:250px; overflow:auto;">
            <t t-foreach="columns" t-as="column">
                <li class="item_column" style="display:flex;justify-content: space-between;align-items: center;padding: 2px 5px;"
                    draggable="true" t-att-data-index="column.id">
                    <div style="display:flex">
                        <div class="custom-control custom-switch" t-att-data-index="column.id">
                            <input type="checkbox" class="custom-control-input o-siwtchs"
                                   t-att-data-name="column.field_name"
                                   t-att-checked="column.invisible ? undefined : 'checked'"
                                   t-att-id="column.field_name"/>
                            <label class="custom-control-label" t-att-for="column.field_name"></label>
                        </div>
                        <t t-esc="column.label"/>
                    </div>
                    <div style="margin:-2px 0 0 5px;cursor: move;display: flex;align-items: center;margin-top:3px;" class="fa fa-arrows">
                    </div>
                </li>
            </t>
        </ul>
    </t>
</templates>
